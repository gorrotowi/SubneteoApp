<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3">

    <TextView
        android:id="@+id/txtIngresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:text="Subneteo IP"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/txtIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/edtxIP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:maxLength="15"
        android:textColor="#fff"
        android:background="#80D8FF"
        android:inputType="phone" >

        <requestFocus />
    </EditText>
    </LinearLayout>
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
                   <TextView
                       android:id="@+id/textView1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="18dp"
                       android:text="Mascara de subred: "
                       android:textSize="15sp"
                       android:textStyle="bold" />

                   <Spinner
                       android:id="@+id/spinner1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="10dp" />
                   
                   </LinearLayout>

    <Button
        android:id="@+id/btnCalcIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#01579B"
        android:textColor="#FFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:text="Calcular" />
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/rounded_btns" >
    
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentRight="true" >
        
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content" >

               <LinearLayout android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="10dp"
                   android:text="id de subred: "
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/txtIdSubRed"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/textView2"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="68dp"
                   android:text="1111"
                   android:textStyle="bold" />
               
               </LinearLayout>
           </RelativeLayout>
           
       </ScrollView>
       
   </RelativeLayout>

</LinearLayout>
